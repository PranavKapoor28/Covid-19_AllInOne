<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FC14192E"
    tools:context=".HomeActivity">


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/r1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="304dp"
            android:layout_height="163dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/covidl" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="461dp"
        android:layout_height="440dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout">


        <Button
            android:id="@+id/roundBtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/roundBtn1"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="63dp"
            android:layout_marginLeft="83dp"
            android:layout_marginTop="37dp"
            android:layout_marginEnd="93dp"
            android:layout_marginRight="93dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btn_rounded"
            android:scrollbarStyle="outsideInset"
            android:shadowColor="#F0817B7B"
            android:text="COVID Info"
            android:textColor="#0A0A0A"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/roundBtn1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.716"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </Button>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:background="#0C0B0B" />

        <Button
            android:id="@+id/roundBtn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/roundBtn3"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="66dp"
            android:layout_marginLeft="83dp"
            android:layout_marginEnd="90dp"
            android:layout_marginRight="93dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btn_rounded"
            android:text="COVID Tracker"
            android:textColor="#0A0A0A"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/roundBtn3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.716"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/roundBtn2">

        </Button>

        <Button
            android:id="@+id/roundBtn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/roundBtn4"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="69dp"
            android:layout_marginLeft="83dp"

            android:layout_marginEnd="87dp"
            android:layout_marginRight="93dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btn_rounded"
            android:text="COVID News"
            android:textColor="#0A0A0A"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@id/roundBtn4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.716"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/roundBtn1"
            app:layout_constraintVertical_bias="0.118">

        </Button>

        <Button
            android:id="@+id/roundBtn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/roundBtn"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="70dp"
            android:layout_marginLeft="83dp"
            android:layout_marginEnd="86dp"
            android:layout_marginRight="93dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btn_rounded"
            android:text="COVID Helpline Numbers"
            android:textColor="#FA070707"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </Button>

        <Button
            android:id="@+id/roundBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="72dp"
            android:layout_marginLeft="83dp"
            android:layout_marginEnd="84dp"
            android:layout_marginRight="90dp"
            android:layout_marginBottom="73dp"
            android:background="@drawable/btn_rounded"
            android:text="Developer Info"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.716"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/roundBtn4"
            app:layout_constraintVertical_bias="0.335">

        </Button>


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>