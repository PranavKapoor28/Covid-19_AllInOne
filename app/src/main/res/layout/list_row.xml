<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout android:padding="8dp" android:layout_weight="7" android:orientation="horizontal" android:descendantFocusability="blocksDescendants" android:background="@android:color/transparent" android:layout_height="wrap_content" android:layout_width="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout android:padding="4dp" android:orientation="vertical" android:layout_height="wrap_content" android:layout_width="wrap_content" android:gravity="center">

    <ImageView android:layout_height="50dp" android:layout_width="70dp" android:id="@+id/galleryImage"/>

</LinearLayout>


    <LinearLayout android:layout_weight="7" android:orientation="vertical" android:layout_height="wrap_content" android:layout_width="0dp">

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/title" android:text="This is news title" android:ellipsize="end" android:scrollHorizontally="true" android:maxLines="2" android:layout_marginBottom="5dp" android:textSize="17sp" android:textColor="#666666" android:shadowRadius="1.0" android:shadowColor="#000"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/sdetails" android:text="This is news description bla bla bla..." android:ellipsize="end" android:scrollHorizontally="true" android:maxLines="2" android:textSize="16sp" android:textColor="#777777" android:minLines="2"/>


    <LinearLayout android:orientation="horizontal" android:layout_height="wrap_content" android:layout_width="match_parent" android:weightSum="1">


    <LinearLayout android:layout_weight="1" android:orientation="horizontal" android:layout_height="wrap_content" android:layout_width="0dp">

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/author" android:text="News Author" android:textSize="15sp" android:textColor="#42A5F5"/>

</LinearLayout>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:gravity="right" android:id="@+id/time" android:text="Time" android:textSize="14sp" android:textColor="#42A5F5"/>

</LinearLayout>

</LinearLayout>

</LinearLayout>