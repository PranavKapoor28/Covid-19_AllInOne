<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.toys.app">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/AppTheme"
        android:screenOrientation="portrait">
        <activity android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".HomeActivity"
            android:exported="true" android:screenOrientation="portrait"/>

        <activity
            android:name=".SplashActivity"
            android:label="COVID-ALLInOne"
            android:theme="@android:style/Theme.Black.NoTitleBar" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".covid_NewsActivity"
            android:exported="true"
            android:label="COVID-ALLInOne" android:screenOrientation="portrait"/>
        <activity
            android:name=".contactActivity"
            android:exported="true" android:screenOrientation="portrait"/>
        <activity
            android:name=".HelplineActivity"
            android:exported="true" android:screenOrientation="portrait"/>
        <activity
            android:name=".covid_infoActivity"
            android:exported="true" android:screenOrientation="portrait"/>
        <activity android:name=".DetailsTrackerActivity" android:screenOrientation="portrait"/>
        <activity
            android:name=".DetailsActivity"
            android:exported="true" android:screenOrientation="portrait"/>
        <activity
            android:name=".AffectedCountries"
            android:exported="true" android:screenOrientation="portrait" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>